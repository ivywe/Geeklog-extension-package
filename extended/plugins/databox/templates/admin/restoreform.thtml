{# begin {templatelocation} #}

<h1 class="uk-h1">{actionname}</h1>

<form class="uk-form uk-form-horizontal" action="{site_admin_url}/plugins/{script}" method="post" enctype="multipart/form-data">

  <div class="uk-form-row uk-clearfix">
    <div class="uk-form-controls">
      {select_filename}
      <input type='submit' name='action' value='{lang_submit}' class="uk-button uk-button-primary"{xhtml}>
      <input type='submit' name='action' value='{lang_cancel}' class="uk-button"{xhtml}>
      <input type="hidden" name="mode" value="{mode}"{xhtml}>
      <input type="hidden" name="{gltoken_name}" value="{gltoken}"{xhtml}>
      <span class="uk-form-help-inline">{help}</span>
    </div>
  </div>

</form>

{# end {templatelocation} #}
